#:import random random

<ScreenHebrew>:
    name:'ScreenHebrew'
    Widget:
        canvas.before:
            Color:
                rgba: 0.2,0.3,0.4,1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            pos: root.width * 0, root.height * 0.87
            size: root.width * 1, root.height * 0.05
            id: title
            text:"My Title"
            background_color: 1,0,0,1
            font_name: "fonts/the_font.ttf"
            font_size: 32
            color: 1,1,1,1

        TextInput:
            id: text_1
            name: "text_1"
            font_size: 24
            text:""
            font_name: "fonts/the_font.ttf"
            pos: root.width * 0.15, root.height * 0.8
            size: root.width * 0.8, root.height * 0.06
            multiline: False

        AlignedTextInput:
            id: text_2
            name: "text_2"
            font_size: 24
            text:""
            font_name: "fonts/the_font.ttf"
            pos: root.width * 0.15, root.height * 0.74
            size: root.width * 0.8, root.height * 0.06
            multiline: False

        Button:
            id: hebrew_done
            name: 'hebrew_done'
            background_color: 0.5,0.5,0.5,1
            background_normal: ''
            text: 'יתמייס'
            font_name: "fonts/the_font.ttf"
            font_size: 16
            size: root.width * 0.06, root.height * 0.06
            pos: root.width * 0.05, root.height * 0.68
            on_press: app.audience_done()

